{
    "builders": [{
        "access_key": "{{user `aws_access_key`}}",
        "ami_name": "delphix-tcw-oracle12-source-unstaged-{{isotime \"20060102030405\"}}",
        "ami_regions": "{{user `region`}}",
        "associate_public_ip_address": true,
        "force_deregister": true,
        "instance_type": "m4.xlarge",
        "launch_block_device_mappings": [{
                "delete_on_termination": true,
                "device_name": "/dev/sda1",
                "volume_size": 15,
                "volume_type": "gp2"
            },
            {
                "delete_on_termination": true,
                "device_name": "/dev/sdb",
                "volume_size": 30,
                "volume_type": "gp2"
            }
        ],
        "name": "delphix-tcw-oracle12-source",
        "region": "{{user `region`}}",
        "run_tags": {
            "branch": "{{ user `branch`}}",
            "commit": "{{ user `commit`}}",
            "dlpx:CostCenter": "{{user `dlpx:CostCenter`}}",
            "dlpx:Expiration": "{{isotime \"2006-01-02\"}}",
            "dlpx:Owner": "{{user `dlpx:Owner`}}",
            "dlpx:Project": "{{user `dlpx:Project`}}"
        },
        "run_volume_tags": {
            "branch": "{{ user `branch`}}",
            "commit": "{{ user `commit`}}",
            "dlpx:CostCenter": "{{user `dlpx:CostCenter`}}",
            "dlpx:Expiration": "{{isotime \"2006-01-02\"}}",
            "dlpx:Owner": "{{user `dlpx:Owner`}}",
            "dlpx:Project": "{{user `dlpx:Project`}}"
        },
        "secret_key": "{{user `aws_secret_key`}}",
        "source_ami_filter": {
            "filters": {
                "name": "delphix-centos7-oracle-12.2.0.1-*"
            },
            "most_recent": true,
            "owners": [
                "self"
            ]
        },
        "ssh_username": "centos",
        "subnet_id": "{{user `subnet_id`}}",
        "tags": {
            "branch": "{{ user `branch`}}",
            "commit": "{{ user `commit`}}",
            "dlpx:CostCenter": "{{user `dlpx:CostCenter`}}",
            "dlpx:Expiration": "{{user `dlpx:Expiration`}}",
            "dlpx:Owner": "{{user `dlpx:Owner`}}",
            "dlpx:Project": "{{user `dlpx:Project`}}",
            "md5sum": "{{user `md5sum`}}",
            "source": "{{ user `source`}}"
        },
        "type": "amazon-ebs",
        "vpc_id": "{{user `vpc_id`}}"
    }],
    "post-processors": [],
    "provisioners": [{
            "ansible_env_vars": [
                "ANSIBLE_HOST_KEY_CHECKING=False"
            ],
            "playbook_file": "../../ansible/tcw_oracle_source.yml",
            "type": "ansible",
            "user": "centos"
        },
        {
            "inline": [
                "sudo sed -i -e '/.*'`hostname -s`'.*/d' /etc/hosts"
            ],
            "type": "shell"
        },
        {
            "inline": [
                "sudo rm -Rf /tmp/*"
            ],
            "type": "shell"
        },
        {
            "inline": [
                "cat /dev/null > .ssh/authorized_keys",
                "echo {{user `ansible_pub_key`}}>> .ssh/authorized_keys"
            ],
            "type": "shell"
        }
    ],
    "sensitive-variables": [
        "ansible_pub_key",
        "aws_access_key",
        "aws_secret_key"
    ],
    "variables": {
        "ansible_pub_key": "{{env `ANSIBLE_PUB_KEY`}}",
        "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
        "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
        "branch": "{{env `GIT_BRANCH`}}",
        "commit": "{{env `GIT_COMMIT`}}",
        "dlpx:CostCenter": "{{env `AWS_COSTCENTER`}}",
        "dlpx:Expiration": "{{env `AWS_EXPIRATION`}}",
        "dlpx:Owner": "{{env `AWS_OWNER`}}",
        "dlpx:Project": "{{env `AWS_PROJECT`}}",
        "md5sum": "",
        "region": "{{env `AWS_REGION`}}",
        "seed": "2ad9254",
        "source": "delphix-centos7-oracle-12.2.0.1.json",
        "subnet_id": "{{env `AWS_SUBNET_ID`}}",
        "vpc_id": "{{env `AWS_VPC_ID`}}"
    }
}